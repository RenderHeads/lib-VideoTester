<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoTesterApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="CounterBtn"
                Text="Click me to select a video to test"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

           <Label x:Name="VideoMetaDataLabel"
                  Text="Video Metadata will show up here after loading a valid video"
                  HorizontalOptions="Center"/>

           <Label x:Name="ResultsLabel"
                  Text="Results will show up here after loading a valid video"
                  HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

